<br>
<br>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
        <div class="row">
          <div class="col-md-12">
            <h1 class="salmon">Regístrate</h1>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-md-12">
            <%= link_to user_omniauth_authorize_path(:facebook), class:"btn btn-block btn-lg fb-btn" do %><%= fa_icon "facebook-f" %> &nbsp; &nbsp; Usando Facebook <% end %>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-md-12">
            <h3 class="salmon">Crea una nueva cuenta</h3>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
         <div class="field">
                <%= f.label "Nombre" %><br />
                <%= f.text_field :user_name, autofocus: true, class:"form-control" %>
              </div>
              <br>
         <div class="field">
                <%= f.label "Apellido Paterno" %><br />
                <%= f.text_field :user_lastname_p, autofocus: true, class:"form-control" %>
              </div>
              <br>
         <div class="field">
                <%= f.label "Apellido Materno" %><br />
                <%= f.text_field :user_lastname_m, autofocus: true, class:"form-control" %>
              </div>
              <br>
         <div class="field">
                <%= f.label "Teléfono" %><br />
                <%= f.number_field :phone, autofocus: true, class:"form-control" %>
              </div>
         <br>
         <div class="field">
           <%= f.label :email %><br />
           <%= f.email_field :email, autofocus: true, placeholder:"ejemplo@pets.com", class:"form-control" %>
         </div>
	 <br/>
	 <div class="field">
	   <%= f.label "Dirección, entre más simple mucho mejor. (Calle, Municipio, Estado)" %><br />
		<%= f.text_field :address, autocomplete: "off", placeholder:"Ej: División del Norte, Coyoacán, Ciudad de México", class:"form-control" %>
              </div>
		      <br>	      
              <br>
              <div class="field">
                <%= f.label "Contraseña" %>
                <%= f.password_field :password, autocomplete: "off", placeholder:"8 caracteres mínimo",class:"form-control" %>
              </div>
              <br>
              <div class="field">
                <%= f.label "Confirma tu contraseña" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Confirma la contraseña", class:"form-control" %>
              </div>
              <br>
              <div class="actions">
                <%= f.submit "¡Vámos!" ,class:"btn btn-block btn-lg boton-salmon"%>
              </div>
            <% end %>
            <!-- 
            <%= render "devise/shared/links" %>          -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

