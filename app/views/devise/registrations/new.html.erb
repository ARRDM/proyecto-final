<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well">
      <div class="row">
        <div class="col-md-12">
          <h1 class="salmon">Regístrate</h1>
        </div>
      </div>
      <hr>
      <div class="row">
        <div class="col-md-12">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, placeholder:"ejemplo@pets.com", class:"form-control" %>
            </div>
            <br>
            <div class="field">
              <%= f.label "Contraseña" %>
              <%= f.password_field :password, autocomplete: "off", placeholder:"8 caracteres mínimo",class:"form-control" %>
            </div>
            <br>
            <div class="field">
              <%= f.label "Confirma tu contraseña" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Confirma la contraseña", class:"form-control" %>
            </div>
            <br>
            <div class="actions">
              <%= f.submit "¡Regístrate!" ,class:"btn btn-block btn-lg boton-salmon"%>
            </div>
          <% end %>
          <!-- 
          <%= render "devise/shared/links" %>          -->
        </div>
      </div>
    </div>
  </div>
</div>

