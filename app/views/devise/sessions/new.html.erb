<br>
<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="well fondo-crema">
        <div class="row">
          <div class="col-md-12">
            <h1 class="salmon">Inicia sesión</h1>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-md-12">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="field">
                <%= f.email_field :email,placeholder: "Email", autofocus: true, class:"form-control" %>
              </div>
              <br>
              <div class="field">
                <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña", autofocus: true, class:"form-control" %>
              </div>
              <br>
              <div class="field text-center">
                <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name)%> 
              </div>
              <div class="actions">
      <br>
                <%= f.submit "¡Vámos!", class:"btn btn-lg btn-block boton-salmon" %>
              </div>
            <% end %>
  <!--
            <%= render "devise/shared/links" %> -->
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col-md-12">
            <%= link_to user_omniauth_authorize_path(:facebook), class:"btn btn-block btn-lg fb-btn" do %><%= fa_icon "facebook-f" %> &nbsp; &nbsp; Iniciar sesión con Facebook <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

