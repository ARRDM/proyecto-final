<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="well fondo-crema">
        <div class="row">
          <div class="col-md-12">
            

            <p id="notice"><%= notice %></p>

            <h1>Bandeja de Entrada</h1>

            <table class="table">
              <thead>

                <tr>
                  <th>Usuario</th>
                  <th>Mascota</th>
                  <th>Fecha</th>
                  <th>Mensaje</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @messages.each do |message| %>
                  <% if current_user.id != message.petitioner %>
                    <% user = User.find(message.petitioner) %>
                  <% else %>
                    <% user = User.find(message.owner) %>
                  <% end %>
                    <% pet = Pet.find(message.pet_id) %>
                    <tr>
                      <td><%= link_to user.user_name + " " + user.user_lastname_p, profile_path(user) %></td>
                      <td><%= link_to pet.name, pet_path(pet) %></td>
                      <td><%= message.created_at.to_formatted_s(:long) %></td>
                      <td><%= message.text %></td>
                      <td><%= link_to 'Show', message %></td>
                      <td><%= link_to 'Edit', edit_message_path(message) %></td>
                      <td><%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                <% end %>
              </tbody>
            </table>
            <br>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


