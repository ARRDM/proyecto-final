<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="well">
      <div class="row">
        <div class="col-md-4">
          <%= image_tag(@pet.image_url, class:"img-responsive img-circle") %>
          <br>
          <div class="row">
            <div class="col-md-12">
              <% if @pet.status %>
              <% else %>
              <%= link_to "¡Adóptame!", pets_path, class:"btn btn-block boton-salmon" %>
              <% end %>
            </div>
          </div>
        </div>
        <div class="col-md-8">
          <div class="row">
            <div class="col-md-12">
              <h1 class="text-center"><%= @pet.name %></h1>
              <div class="row">
                <div class="col-md-4">
                  <h3>Raza: </h3>
                  <p><%= @pet.breed %></p>
                </div>
                <div class="col-md-4">
                  <h3>Edad: </h3>
                  <p><%= @pet.age %></p>
                </div>
                <div class="col-md-4">
                  <h3>Color de pelo: </h3>
                  <p><%= @pet.hair %></p>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4">
                  <h3>Género:</h3>
                  <p><%= @pet.gender %></p>
                </div>
                <div class="col-md-4">
                  <h3>Tamaño:</h3>
                  <p><%= @pet.size %></p>
                </div>
                <div class="col-md-4">
                  <h3>Estado: </h3>
                  <% if @pet.status %>
                  <p class="green">Adoptado</p>
                  <% else %>
                  <p class="green">En espera de un hogar</p>
                  <% end %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <h2>Acerca de <%= @pet.name %>:</h2>
                  <p><%= @pet.description %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
